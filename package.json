{
  "name": "toobig",
  "description": "Check that your files don't get too big.",
  "version": "0.1.1",
  "license": "MIT",
  "author": {
    "name": "Daniel Perez Alvarez",
    "email": "unindented@gmail.com",
    "url": "http://unindented.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unindented/toobig.git"
  },
  "bin": {
    "toobig": "dist/cli.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean:coverage": "rimraf coverage",
    "clean:dist": "rimraf dist",
    "clean": "run-p clean:*",
    "build:dist": "tsc --project tsconfig.dist.json",
    "build:chmod": "chmod +x dist/cli.js",
    "build": "run-s clean build:*",
    "test:tslint": "tslint --format verbose --project tsconfig.json",
    "test:jest": "jest --coverage --config config/jest.json",
    "test": "run-s test:*",
    "watch:jest": "jest --watch --config config/jest.json",
    "watch": "run-p watch:*",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "bytes": "^3.1.0",
    "chalk": "^3.0.0",
    "cosmiconfig": "^6.0.0",
    "get-folder-size": "^2.0.1",
    "glob": "^7.1.6",
    "yargs": "^15.0.2"
  },
  "devDependencies": {
    "@types/bytes": "^3.1.0",
    "@types/glob": "^7.1.1",
    "@types/jest": "^24.0.23",
    "@types/yargs": "^13.0.3",
    "jest": "^24.9.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "ts-jest": "24.2.0",
    "tslint": "^5.20.1",
    "tslint-consistent-codestyle": "^1.16.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^3.7.2"
  }
}
